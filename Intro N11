bool solution(int n) 
{
    int digits = (int)log10(n) + 1, sum1 = 0, sum2 = 0;
    if(digits % 2 != 0)
        return false;
    for(int i = 0; i < digits / 2; i++)
    {
        sum1 += n % 10;
        n /= 10;
    }
    for(int i = 0; i < digits / 2; i++)
    {
        sum2 += n % 10;
        n /= 10;
    }
    return sum1 == sum2;
}
