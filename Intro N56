int solution(int product) 
{
    if (product == 0)
        return 10;
    else if (product <= 9)
        return product;
    for(int i = 25; i <= 9999; i++)
    {
        int n = i, num = 1;
        while (n > 0)
        {
            num *= n % 10;
            n /= 10;
        }
        if (num == product)
            return i;
    }
    return -1;
}
